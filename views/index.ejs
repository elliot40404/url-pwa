<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="This a url shortener">
    <title>URL SHORTENER</title>
    <link rel="stylesheet" href="css/main.css">
    <link rel="manifest" href="manifest.json">
    <meta name="theme-color" content="#000000">
    <link rel="apple-touch-icon" href="icons/manifest-icon-512.png">
</head>
<body class="body" onload="copy()">
    <h1>URL SHORTENER</h1>
    <div class="main">
        <form action="/url" method="POST" class="form">
            <label for="link">Input url</label>
            <input onchange="valid()" required autofocus autocomplete="off" type="text" name="link" id="link">
            <button id="btnn" disabled type="submit" class="btn">GO</button>
        </form>
    </div>
    <% if (url.link) { %>
        <div class="out">
            <h6>Your shortend url is</h6>
            <input class="a" readonly value="<%= 'https://urlshorte.herokuapp.com/' + url.slug %>" id="text">
        </div>
        <% } %>
            <script src="https://unpkg.com/@popperjs/core@2" defer></script>
            <script src="https://unpkg.com/tippy.js@6" defer></script>
            <script src="/js/app.js" defer></script>
            <script defer>
                tippy('#text', {
                    content: 'Click to copy!',
                });
            </script>
            <script>
                if ('serviceWorker' in navigator) {
                    window.addEventListener('load', () => {
                        navigator.serviceWorker.register('service-worker.js');
                    });
                }
            </script>
</body>
</html>